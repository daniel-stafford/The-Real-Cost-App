  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "watch": "cross-env NODE_ENV=development nodemon index.js",
    "server": "node index.js",
    "client": "cross-env NODE_ENV=development npm start --prefix client",
    "both": "concurrently \"npm run server\" \"npm run client\"",
